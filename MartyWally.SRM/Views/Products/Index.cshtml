@model List<Product>
@{

}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div><h3>Products</h3></div>
        <a class="btn btn-primary" asp-action="Create">Add a new Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsve">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Unit Price</th>
                        <th>Qty in Stock</th>
                        <th>Supplier</th>
                        <th>Date Supplied</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var p in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(p)+1).</td>
                                <td>@p.Name</td>
                                <td>@p.UnitPrice</td>
                                <td>@p.QuantityInStock</td>
                                <td>@p.Supplier.Name</td>
                                <td>@p.DateSupplied!.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>