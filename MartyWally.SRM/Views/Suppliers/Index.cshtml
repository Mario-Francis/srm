@model List<Supplier>
@{

}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div><h3>Suppliers</h3></div>
        <a class="btn btn-primary" asp-action="Create">Create Supplier</a>
    </div>
    <div class="card-body">
        <div class="table-responsve">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Contact Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(s)+1).</td>
                                <td>@s.Name</td>
                                <td>@s.ContactPhone</td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="3">No records found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>